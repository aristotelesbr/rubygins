<% if @post.errors.any? %>
  <div id="error_explanation">
    <p>
      Erro no formulario
    </p>
  </div>
<% end %>
<%= form_for @post do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  </br>
  <%= f.submit %>
<% end %>
