<%= render 'error_messages', record: @post  %>

<%= form_for @post do |f| %>
  <div>
    <%= f.label :title, t('labels.post.title') %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div>
    <%= f.label :body, t('labels.post.body') %><br>
    <%= f.text_area :body %>
    <%= f.submit class: 'button' %>
    <%= link_to t('links.post.cancel'), posts_path %>
  </div>
<% end %>


